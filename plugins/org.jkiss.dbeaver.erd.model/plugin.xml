<plugin>

    <extension point="org.eclipse.core.contenttype.contentTypes">
        <content-type
                base-type="org.eclipse.core.runtime.text"
                default-charset="utf-8"
                file-extensions="erd"
                id="org.jkiss.dbeaver.erd"
                name="ER diagram"
                priority="normal"/>
    </extension>

    <extension point="org.jkiss.dbeaver.resourceType">
        <type id="er-diagram" name="ER Diagram" icon="icons/erd_folder.png" managable="true">
            <root folder="Diagrams"/>
            <contentTypeBinding contentTypeId="org.jkiss.dbeaver.erd"/>
        </type>
    </extension>

</plugin>
