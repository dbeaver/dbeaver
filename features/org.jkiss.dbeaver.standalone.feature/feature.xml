<?xml version="1.0" encoding="UTF-8"?>
<feature
        id="org.jkiss.dbeaver.standalone.feature"
        label="%featureName"
        version="4.3.2"
        provider-name="%providerName"
        plugin="org.jkiss.dbeaver.core.application">

    <description>
        %description
    </description>

    <copyright>
        %copyright
    </copyright>

    <license url="%licenseURL">
        %license
    </license>

    <url>
        <update label="DBeaver Universal Database Manager" url="https://dbeaver.jkiss.org/"/>
    </url>

    <includes id="org.jkiss.dbeaver.rcp.feature" version="0.0.0"/>
    <includes id="org.jkiss.dbeaver.core.feature" version="0.0.0"/>
    <includes id="org.jkiss.dbeaver.ext.generic.feature" version="0.0.0"/>
    <includes id="org.jkiss.dbeaver.ext.mysql.feature" version="0.0.0"/>
